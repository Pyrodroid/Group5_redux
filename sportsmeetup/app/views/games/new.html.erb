<h1>Create a Game!</h1>

<%= form_for :game, url: games_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br><br>
    <%= f.label :sport %><br>
    <%= f.text_field :sport %><br><br>
    <%= f.label :location %><br>
    <%= f.text_field :location %><br><br>
    <%= f.label :time %><br>
    <%= f.text_field :time %><br><br>
    <%= f.label :minimum_players_needed %><br>
    <%= f.text_field :min %><br><br>
    <%= f.label :maximum_players_feasible %><br>
    <%= f.text_field :max %><br><br>
    <%= f.label :details%><br>
    <%= f.text_area :details, :cols=>'40', :rows=>'10'%><br>
</p>
 
  <p>
    <%= f.submit :class=>"button"%>
    <%= link_to '<button type="button" class="button">Cancel</button>'.html_safe, sports_path %>
  </p>
<% end %>
