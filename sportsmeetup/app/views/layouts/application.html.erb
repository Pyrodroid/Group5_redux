      <div class="site_header_4"><h1 class="title">&nbsp;&nbsp;SPORTS! Meet Up and Play</h1></div>
      <div class="site_header_5"><h1 class="title">&nbsp;&nbsp;SPORTS! Meet Up and Play</h1></div>
    </div>
    <div id="main">
      <% if flash[:notice] %>
      <div class="alert alert-info">
        <%= flash[:notice] %>
      </div>
      <% end %>
  
      <%= yield %>
      <br />
      <br />
    </div>
  </body>
</html>